@model List<MunicipalityClient.Municipality>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@{
    bool flag = false;
    string text = "XXXX";
    List<Municipality> SortedList = Model.OrderBy(o=>o.OB_NAME).ToList();
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
        {
            Text = "Izberi občino",
            Value = "Izberi občino"
        });
    foreach (var item in SortedList)
    {
        listItems.Add(new SelectListItem
        {
            Text = item.OB_NAME,
            Value = item.OB_UNAME
        });
    }
}



@Html.DropDownList("obcina", listItems, new { @class = "form-control", @default = "Izberi Občino", @onChange = "SelectedValue(this)"})
<br />
@Html.Label("label","Izbrana Občina: Občina "+text)
<script>
    function SelectedValue(ddlObject) {
        //Selected value of dropdownlist
        $("label").text("Izbrana Občina: Občina "+ddlObject.value)
    }
</script>